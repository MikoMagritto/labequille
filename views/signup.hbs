<div id="form">
  <h2>Sign Up</h2>
  <form action="/signup" method="POST">
    <label for="input-username">Prénom</label>
    <input type="username" id="input-information" name="prenom" placeholder="Ton prénom" />

    <label for="">Nom</label>
    <input type="username" id="input-information" name="nom" placeholder="Ton nom" />

    <label for="">Pseudo</label>
    <input type="username" id="input-information" name="pseudo" placeholder="Votre pseudo" />

    <label for="">Mail</label>
    <input type="mail" id="input-information" name="mail" placeholder="Ton mail" />

    <label for="">Téléphone</label>
    <input type="number" id="input-information" name="telephone" placeholder="Ton 06" />

    <label for="">Adresse</label>
    <input type="text" id="input-information" name="adresse" placeholder="Ton château" />

    <label for="input-password">Password</label>
    <input type="password" name="password" id="input-password" placeholder="********" />

    <button type="submit">Créer un compte</button>

    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>